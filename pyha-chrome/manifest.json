{
  "name": "ПЫХА",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Проверка непрочитанных на пыхе",
  "homepage_url": "http://pyha.ru/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "ПЫХА",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://pyha.ru/",
    "http://pyha.loc/"
  ]
}