{
  "name": "ПЫХА",
  "version": "2.0.2",
  "manifest_version": 2,
  "description": "Проверка непрочитанных на пыхе",
  "homepage_url": "http://pyha.ru/",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "ПЫХА",
    "default_popup": "src/browser_action.html"
  },
  "options_page": "src/options.html",
  "permissions": [
    "notifications",
    "tabs",
    "http://pyha.ru/"
  ]
}